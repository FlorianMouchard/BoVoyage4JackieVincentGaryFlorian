@model IEnumerable<BoVoyage4.Models.Destination>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/BackOffice/Views/Shared/_LayoutBO.cshtml";
}

<h2>Liste des destinations</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-outline-info btn-sm">Créer une nouvelle destination</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Continent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Continent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td>
            @Html.Raw(item.Description)            
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.ID})"><i class="fa fa-edit"> | </i></a>
            <a href="@Url.Action("Details", new { id=item.ID})"><i class="fa fa-eye"></i></a>
        </td>
    </tr>
}

</table>
